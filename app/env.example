# app/env.example
# ------------------------------------------------------------------------------
# Frontend env vars (public-safe). Never put secrets here.
# These are safe to expose to the browser.
# ------------------------------------------------------------------------------

# Core URLs
NEXT_PUBLIC_APP_ORIGIN=https://www.virtualaddresshub.co.uk
NEXT_PUBLIC_API_BASE=https://api.virtualaddresshub.co.uk/api

# Legacy support
NEXT_PUBLIC_BASE_URL=https://www.virtualaddresshub.co.uk
BACKEND_API_ORIGIN=https://api.virtualaddresshub.co.uk/api

# External API Keys (public-safe)
NEXT_PUBLIC_COMPANIES_HOUSE_API_KEY=your_companies_house_api_key
NEXT_PUBLIC_ADDRESS_API_KEY=your_address_api_key

# Analytics & Monitoring (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Optional: feature flags (no secrets)
# NEXT_PUBLIC_ENABLE_BETA=0
# NEXT_PUBLIC_ENABLE_DEBUG=0