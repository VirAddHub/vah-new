{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist/src",
        "allowJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "checkJs": false,
        "noEmit": false,
        "noImplicitAny": false,
        "typeRoots": [
            "../../node_modules/@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "app",
        "lib/**",
        "**/*.test.ts",
        "**/*.js",
        "**/*.mjs"
    ]
}