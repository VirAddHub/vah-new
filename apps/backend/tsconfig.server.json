{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist/src",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "checkJs": false,
        "noEmit": false,
        "noImplicitAny": false,
        "typeRoots": [
            "../../node_modules/@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "lib/**/*.d.ts",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "app",
        "lib/**/*.js",
        "**/*.test.ts",
        "src/**/*.js",
        "src/**/*.mjs"
    ]
}