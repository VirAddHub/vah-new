# Frontend origin for redirects
APP_ORIGIN=http://localhost:3000

# Postmark (no real tokens needed to ship)
POSTMARK_WEBHOOK_USER=postmark
POSTMARK_WEBHOOK_PASS=change_me
# Comma-separated list; optional. Example: 3.232.152.0, 3.226.228.0  (use your allow-list if you want)
POSTMARK_ALLOWED_IPS=

# Metrics / Prometheus
METRICS_USER=metrics
METRICS_PASS=change_me
# optional, comma-separated allow-list (e.g. Prometheus/Render IPs)
METRICS_ALLOWED_IPS=

# OneDrive via Make.com
MAKE_ONEDRIVE_WEBHOOK_USER=make
MAKE_ONEDRIVE_WEBHOOK_PASS=change_me
# (Optional) IP allow-list for Make â€” comma-separated
MAKE_ONEDRIVE_ALLOWED_IPS=

# Outbound: VAH -> Make (Create short-lived sharing link)
MAKE_SIGN_DOWNLOAD_URL= # e.g. https://hook.make.com/abc123
MAKE_SIGN_DOWNLOAD_SECRET=change_me

# Outbound: VAH -> Make (Append forwarding log row in Excel)
MAKE_FORWARDING_LOG_URL=  # e.g. https://hook.make.com/xyz987
MAKE_FORWARDING_LOG_SECRET=change_me

# Mail retention (days)
STORAGE_RETENTION_DAYS=14

# Downloads remain allowed after the storage window
ALLOW_DOWNLOAD_AFTER_EXPIRY=true
MAKE_ONEDRIVE_HMAC_SECRET=change_me
