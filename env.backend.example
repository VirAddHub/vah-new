# Backend Environment Variables
# Copy this to .env and update values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/vah_db
DB_CLIENT=pg

# Email (Postmark)
POSTMARK_SERVER_TOKEN=pm_your_token_here
POSTMARK_FROM=hello@virtualaddresshub.co.uk
POSTMARK_TO=support@virtualaddresshub.co.uk
POSTMARK_FROM_NAME=VirtualAddressHub Support

# CORS & Security
ALLOWED_ORIGINS=http://localhost:3000,https://www.virtualaddresshub.co.uk
JWT_SECRET=your-super-secret-jwt-key-here
JWT_COOKIE=vah_session

# CORS allowlist (comma-separated)
FRONTEND_ORIGINS=http://localhost:3000,https://vah-frontend-final.vercel.app,https://virtualaddresshub.co.uk,https://www.virtualaddresshub.co.uk

# Allow project-specific Vercel previews
ALLOW_VERCEL_PREVIEWS=true
VERCEL_PROJECT_PREFIX=vah-frontend-final

# Production settings
NODE_ENV=production
COOKIE_DOMAIN=.virtualaddresshub.co.uk

# Development
NODE_ENV=development
PORT=4000

# Optional: Disable features during testing
MOCK_EMAIL=1
DISABLE_STORAGE_EXPIRY_SCAN=1
