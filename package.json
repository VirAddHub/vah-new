    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "compression": "1.8.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "csurf": "1.11.0",
    "dayjs": "1.11.18",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "express-rate-limit": "8.1.0",
    "express-validator": "7.2.1",
