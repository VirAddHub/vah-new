    "morgan": "1.10.1",
    "nanoid": "^5.1.5",
    "next": "14.2.32",
    "next-mdx-remote": "5.0.0",
    "node-fetch": "^3.3.2",
    "pdfkit": "0.17.2",
    "pg": "8.16.3",
    "postcss": "^8.4.47",
    "postmark": "4.0.5",
    "prom-client": "^15.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark-gfm": "4.0.1",
    "tailwind-merge": "2.5.2",
    "tailwindcss": "^3.4.10",
