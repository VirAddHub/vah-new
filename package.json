    "@types/cors": "2.8.19",
    "@types/csurf": "1.11.5",
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/supertest": "6.0.3",
    "concurrently": "9.2.1",
    "cross-env": "10.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.32",
    "jest": "30.1.3",
    "rimraf": "6.0.1",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "tsx": "4.20.5",
    "typescript": "5.5.4"
  },
  "overrides": {
    "@tailwindcss/postcss": "0.0.0-security",
    "@tailwindcss/node": "0.0.0-security",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}