# Production Environment Configuration Template
# Copy this to .env.production and fill in your actual values

NODE_ENV=production
DEV_MODE=0
BASE_URL=https://your-domain

# Database
DATABASE_URL=file:data/app.db

# Mail
POSTMARK_SERVER_TOKEN=your_postmark_token_here
POSTMARK_FROM=hello@virtualaddresshub.co.uk

# OneDrive webhook verification
ONEDRIVE_WEBHOOK_SECRET=your_onedrive_webhook_secret_here

# Payments
GO_CARDLESS_ACCESS_TOKEN=your_gocardless_token_here
GO_CARDLESS_WEBHOOK_SECRET=your_gocardless_webhook_secret_here

# KYC
SUMSUB_APP_TOKEN=your_sumsub_token_here
SUMSUB_SECRET_KEY=your_sumsub_secret_here

# Security
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=lax

# Storage retention (days)
STORAGE_RETENTION_DAYS=365
