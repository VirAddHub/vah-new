{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist/src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "noImplicitAny": false,
        "types": [
            "node",
            "express",
            "express-session",
            "connect-pg-simple",
            "cors"
        ],
        "typeRoots": [
            "./src/types",
            "../../node_modules/@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "server/**/*",
        "routes/**/*",
        "middleware/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "app",
        "lib/**",
        "**/*.test.ts"
    ]
}