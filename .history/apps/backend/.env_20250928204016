DB_CLIENT=pg
DISABLE_SQLITE=true

# Development settings
NODE_ENV=development
PORT=8080

# CORS & Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
JWT_SECRET=your-super-secret-jwt-key-here-local-dev
JWT_COOKIE=vah_session

# CORS allowlist (comma-separated)
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:8080

# Optional: Disable features during testing
MOCK_EMAIL=1
DISABLE_STORAGE_EXPIRY_SCAN=1

# Email (Postmark) - optional for local dev
