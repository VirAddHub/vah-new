{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true
    },
    "include": [
        "server/**/*",
        "routes/**/*",
        "lib/**/*",
        "middleware/**/*"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "app",
        "src"
    ]
}